<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ket.vocabulary.KetVocabularyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KetVocabulary"
        tools:targetApi="31">
        
        <!-- 主活动 -->
        <activity
            android:name="com.ket.vocabulary.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KetVocabulary">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 启动页活动 -->
        <activity
            android:name="com.ket.vocabulary.SplashActivity"
            android:exported="false"
            android:theme="@style/Theme.KetVocabulary.Splash" />
        
    </application>

</manifest>